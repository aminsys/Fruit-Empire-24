@page
@model Banana_King.Pages.BananaOperationsModel
@{
}

<div class="row">
    @if (Model.IsAdmin)
    {
        <form method="post" class="card p-3">
            <div class="row">
                <div asp-validation-summary="All"></div>
            </div>
            <div class="form-group mb-0 align-middle">

                <label>Sort Name</label>
                <input type="text" asp-for="NewBanana.SortName" class="mr-5" />

                <label>Short Description</label>
                <input type="text" asp-for="NewBanana.Description" class="mr-5" />

                <label>Price</label>
                <input asp-for="NewBanana.Price" class="mr-5" />

                <label>Image Url</label>
                <input type="text" asp-for="NewBanana.Img" class="mr-5" />

                <button type="submit" class="btn btn-primary">Add</button>
            </div>
        </form>
    }
    

    <table class="table mt-5">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Price</th>
                @if (Model.IsAdmin)
                {
                    <th scope="col">Delete</th>
                }
            </tr>
        </thead>
        @foreach(var banana in Model.Bananas)
        {
            <tr>
                <td>@banana.SortName</td>
                <td>@banana.Price</td>
                <td>@banana.Description</td>
                <td>
                    @if (Model.IsAdmin)
                    {
                        <form method="post" asp-page-handler="Delete" asp-route-id="@banana.Id">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </table>
</div>
