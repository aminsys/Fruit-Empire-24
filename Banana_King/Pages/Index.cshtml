@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="row m-2 justify-content-center">
    <h1 class="display-4">Welcome to Banana King 🍌</h1>
        <h3>Available banana types</h3>

        @foreach(var item in Model.bananas)
        {
            <div class="card" style="width:15em; margin:10px;">
                <img src="@item.Img" class="card-img-top p-2" />
                <div class="card-body text-center">
                    <div class="card-title">
                        <h3>@item.SortName</h3>
                    </div>
                    <div class="card-text">
                        <p>@item.Description</p>
                    </div>
                    <div class="row">
                    <p class="text-secondary">Stock: @item.Inventory</p>
                    @if (item.Inventory == 0)
                    {
                        <a href="#" class="btn btn-secondary btn-sm disabled">Order</a>
                    }
                    else
                    {
                        <a href="#" class="btn btn-primary btn-sm">Order</a>
                    }
                </div>
                    
                </div>
            </div>
        }
</div>
